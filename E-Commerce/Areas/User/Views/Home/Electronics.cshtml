@model IEnumerable<Product>

<div class="row pb-3">
	@foreach(var product in Model)
	{
		@if(product.CategoryId == 2)
		{
			<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:2px solid #1a936f; border-radius: 10px;">
					<div class="card">
						<img src="@product.Image" class="card-img-top rounded"/>

						<div class="card-body">
						<div class="pl-1">
							<p class="card-title h5 text-primary">@product.ProductName</p>
							<p class="card-title text-info">by <b>@product.Producer</b></p>
						</div>
						<div class="pl-1">
							<p><b>@product.Price.ToString("0.00") birr</b></p>
						</div>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
							Details
						</a>
					</div>
				</div> 
			</div>
		</div>
		}
	}
</div>